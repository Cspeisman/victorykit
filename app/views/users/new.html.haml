.page_content.signup_login
  - if @user.errors.any?
    .alert.alert-error
      Form is invalid
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .signup_login_form
    .signup
      %h1 Sign Up
      = simple_form_for @user do |f|
        = f.input :email, :error => false, :input_html => { :autocomplete => "off" }
        = f.input :password, :error => false, :required => true, :input_html => { :autocomplete => "off" }
        = f.input :password_confirmation, :error => false, :required => true, :input_html => { :autocomplete => "off" }
        = f.button :submit, :class => 'btn btn-primary', :id => 'sign-up-submit', :value => 'Sign Up'

    = render :partial => 'shared/login_form'

  .privacypolicy
    We don't share your email address without your permission. We will send you updates on important campaigns by email, but you can unsubscribe at any time.


