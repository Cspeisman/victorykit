<%####################################################################################################################
Greetings VictoryKit team member. When you change this template, please test it in multiple email clients. This can be easily done using Campaign Monitor: https://victorykit.createsend.com  
#################################################################################################################### %>
<%= render "mail/email_style" %>

<p>Thanks for signing "<%=@signature.petition.title%>". Please encourage your friends to sign by forwarding this link to them:</p>

<p><a href="<%=@petition_link%>"><%=@petition_link%></a></p>

<div>
  <table align="right" width="210"style="align: right; width: 210px; z-index:99;">
    <tr>
      <td style="cell-padding: 5px; padding: 5px;">
        <table align="right" width="200" style="align:right;border: 1px solid black;">
          <tr>
            <td style="padding: 10px;">
              <table width="180"style="width:180px;max-width:180px;">
                <tr>
                  <td style="font-weight:bold;margin-bottom:15px;">
                    <%= @short_summary if @short_summary %>
                  </td>
                </tr>
                <tr>
                  <td width="180" style="width: 180px;">
                    <%if(@image_url.present?)%>
                      <img width="180" style="max-width:180px; width:180px;margin-bottom:15px;" src="<%=@image_url%>"/>
                    <%end%>
                  </td>
                </tr>
                <tr>
                  <td>
                    <a class="sign-petition-link" href="<%=@petition_link%>" style="text-decoration:none">
                      <table>
                        <tr>
                          <td class="sign-button" width="180" align="right" style="font-weight:bold;width:180px;border-radius:5px;color:white;padding:10px;font-size:16px; cell-padding: 10px; text-align: center; background:red;">
                            Take Action!
                          </td>
                        </tr>
                      </table>
                    </a>
                  </td>
                </tr>
                <tr>
                  <td align="center">
                    <a href="<%=@fb_share_url%>" style="text-decoration:none">
                      <table>
                        <tr>
                          <td width="120" align="right" style="font-weight:bold;width:120px;border-radius:5px;color:white;padding:5px;font-size:12px; cell-padding: 5px; text-align: center; background:darkgrey;">
                            Share on Facebook!
                          </td>
                        </tr>
                      </table>
                    </a>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<div>

<p><b><%=@signature.petition.title%></b></p>

<%=sanitize(@signature.petition.description_lsub("<b><a href='#{@petition_link}'>Please, click here to sign now!</a></b>"))%>

<p><b><a href="<%=@petition_link%>">Please, click here to sign now!</a></b></p>

<hr />

<p><a href="<%=@unsubscribe_link%>">To stop receiving emails from us, click here to unsubscribe.</a></p>
