- if (not f.object.title_type) || (f.object.title_type == title_type)
  .additional_title
    - title_type ||= f.object.title_type
    - label_name ||= PetitionTitle.full_name(title_type)
    = f.text_field :title, :class => "string with_icon"
    = f.hidden_field :title_type, :value => title_type
    .btn.btn-primary{onclick: "remove_fields(this)"}
      %i.icon-trash.icon-white= link_to_remove_fields "remove", f
